<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para textos -->
    <style name="Base.Theme.GafasMatch.Text">
        <item name="android:textColor">@color/md_theme_scrim_mediumContrast</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fredoka_expanded_bold</item>
        <!-- Otros atributos de estilo para textos -->
    </style>

    <!-- Estilo para títulos -->
    <style name="Base.Theme.GafasMatch.Title">
        <item name="android:textColor">@color/md_theme_tertiaryFixedDim_mediumContrast</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/fredoka_bold</item>
        <item name="android:paddingLeft">16dp</item>
        <!-- Otros atributos de estilo para títulos -->
    </style>

    <!-- Estilo para botones -->
    <style name="Base.Theme.GafasMatch.Button">
        <item name="android:fontFamily">@font/fredoka_bold</item>
        <item name="android:textColor">@color/md_theme_scrim_mediumContrast</item>
        <item name="android:radius">20dp</item>
    </style>
</resources>